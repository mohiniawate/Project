{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "My Profile",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "https://pbs.twimg.com/profile_images/3647943215/d7f12830b3c17a5a9e4afcc370e3a37e_400x400.jpeg",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${StudentName}",
              "wrap": true,
              "fontType": "Default",
              "size": "ExtraLarge",
              "horizontalAlignment": "Left",
              "height": "stretch",
              "spacing": "None",
              "color": "Good"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Course:",
          "value": "${Stream}"
        },
        {
          "title": "Year:",
          "value": "${Year}"
        },
        {
          "title": "Attendance:",
          "value": "${Attendance}%"
        },
        {
          "title": "Pending Fees:",
          "value": "${PendingFees}"
        },
        {
          "title": "Contact Number:",
          "value": "${MobileNo}"
        },
        {
          "title": "Email Id:",
          "value": "${EmailId}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}